{
  "name": "ChatGPT Prompts",
  "version": "0.1.0",
  "description": "Save your best prompts and load them at the right moment, making your conversations smarter and more engaging.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://chat.openai.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["src/content-script.js"],
      "css": ["assets/styles/content-script.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["https://chat.openai.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/imgs/extension-icon-16.png",
      "24": "assets/imgs/extension-icon-24.png",
      "32": "assets/imgs/extension-icon-32.png"
    },
    "default_title": "ChatGPT Prompts",
    "default_popup": "src/popup.html"
  },
  "manifest_version": 3
}
